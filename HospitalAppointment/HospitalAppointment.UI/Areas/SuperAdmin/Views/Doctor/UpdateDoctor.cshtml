
@{
    ViewData["Title"] = "Doktor Güncelleme";
}
@model HospitalAppointment.DTO.DTOs.Doctor.DoctorUpdateDto

<div class="col-sm-10 container-fluid">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header">
            <h5>Doktor Güncelleme Sayfası</h5>
        </div>
        <div class="card-block">
            <form asp-action="UpdateDoctor" method="post">
                <input type="hidden" asp-for="Id" value="@Model.Id"/>
                <input type="hidden" asp-for="RolId" value="@Model.RolId" />
                <input type="hidden" asp-for="Doctor.SuperAdminId" value="@Model.Doctor.SuperAdminId"/>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Ad</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="Name" value="@Model.Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Soyad</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="SurName" value="@Model.SurName">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">TCno</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="Tcno" value="@Model.Tcno">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="Email" value="@Model.Email">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Doğum Tarihi</label>
                    <div class="col-sm-10">
                        <input type="date" id="myDate" class="form-control" required asp-for="BirthDate" >
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Telefon</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="Telephone" value="@Model.Telephone">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Cinsiyet</label>
                    <div class="col-sm-10">
                        <select asp-for="Gender" class="form-control" required>
                            <option value="true">Erkek</option>
                            <option value="false">Kadın</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Parola</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="Password" value="@Model.Password">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Unvan</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="Doctor.Apellation" value="@Model.Doctor.Apellation">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Departman</label>
                    <div class="col-sm-10">
                        <select asp-for="Doctor.DepartmentId" class="form-control" asp-items="@ViewBag.Departments" required>
                            <option hidden value="-1">Departman Seçiniz</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Policlinic</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="Doctor.Policlinic.PoliclinicName" value="@Model.Doctor.Policlinic.PoliclinicName">
                    </div>
                </div>
                <br />
                <button type="submit" class="btn waves-effect waves-light btn-primary"><i class="icofont icofont-check-circled"></i>Kaydet</button>
            </form>
        </div>
    </div>

</div>
