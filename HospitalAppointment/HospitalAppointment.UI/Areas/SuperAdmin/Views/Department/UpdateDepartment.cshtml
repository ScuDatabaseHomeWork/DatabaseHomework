
@{
    ViewData["Title"] = "Departman Güncelle";
}

@model HospitalAppointment.DataAccess.Concrete.EntityFrameworkCore.Entities.Department


<div class="col-sm-10 container-fluid">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header">
            <h5>Departman Güncelleme Sayfası</h5>
        </div>
        <div class="card-block">
            <form asp-action="UpdateDepartment" method="post">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Ad</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required asp-for="DepartmanName" value="@Model.DepartmanName">
                    </div>
                </div>
              
                <br />
                <button type="submit" class="btn waves-effect waves-light btn-primary"><i class="icofont icofont-check-circled"></i>Kaydet</button>
            </form>
        </div>
    </div>

</div>