
@{
    ViewData["Title"] = "Karalistelerim";
}

@model List<HospitalAppointment.DTO.DTOs.BlackList.BlackListOfPatientDto>

@if (Model.Count != 0)
{
    <div class="card">
        <div class="card-header">
            <h5>Karalistelerim</h5>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Karaliste Zaman Aşımı</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blackList in Model)
                        {
                            <tr>
                                <td>@blackList.DeceptionCount.ToShortDateString()</td>
                                <td>@blackList.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <h1>Kayıt Yok</h1>
}