
@{
    ViewData["Title"] = "SelectingDoctor";
}

@model HospitalAppointment.DTO.DTOs.Appointment.AppointmentUserDto

<div class="col-md-10 container-fluid">
    <div class="card">
        <div class="card-header">
            <h5>Bölüm Seçme Sayfası</h5>
        </div>
        <div class="card-block">
            <form class="form-material" asp-action="SelectingDateDay" method="post">
                <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                <input type="hidden" asp-for="Name" value="@Model.Name" />
                <input type="hidden" asp-for="SurName" value="@Model.SurName" />
                <input type="hidden" asp-for="DepartmentId" value="@Model.DepartmentId"/>
                <input type="hidden" asp-for="DepartmentName" value="@Model.DepartmentName"/>
                <div class="form-group form-default">
                    <input type="text" disabled class="form-control"  value="@Model.Name @Model.SurName">
                    <span class="form-bar"></span>
                </div>
                <div class="form-group form-default">
                    <input type="text" disabled class="form-control"  value="@Model.DepartmentName">
                    <span class="form-bar"></span>
                </div>
               
                <div class="form-group form-default">
                        <select asp-for="DoctorUserId" class="form-control" asp-items="@ViewBag.DepartmentDoctors">
                            <option hidden value="-1">Doktor Seçiniz</option>
                        </select>
                        <span class="form-bar"></span>
                    </div>
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit" class="btn waves-effect waves-light btn-primary"><i class="icofont icofont-check-circled"></i>Kaydet</button>
            </form>
        </div>
    </div>
</div>