
@{
    ViewData["Title"] = "Index";
}


@model List<HospitalAppointment.DTO.DTOs.Appointment.AppointmentsOfPatientRegistrar>

@if (Model.Count != 0)
{
<div class="card">
    <div class="card-header">
        <h5>Doktorlar Departmanları Ve Poliklinikleri</h5>
        @*<div class="card-header-right">
                <a class="btn btn-secondary" asp-action="CreateDoctor">Yeni Doktor</a>
            </div>*@
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Randevu Tarihi</th>
                        <th>Hasta Adı</th>
                        <th>Doktor Adı</th>
                        <th>Kayıtçı adı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.Date</td>
                            <td>@appointment.Patient.User.Name</td>
                            <td>@appointment.Doctor.User.Name</td>
                            <td>@appointment.Registrar.User.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}
else
{
    <h1>Kayıt Yok</h1>
}
