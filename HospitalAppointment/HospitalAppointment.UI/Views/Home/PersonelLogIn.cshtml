
@{
    ViewData["Title"] = "Personel Giriş";
}
@model UserLoginDto

<form class="md-float-material form-material" asp-action="UserLogIn" method="post">
    <input type="hidden" asp-for="LoginPath" value="PersonelLogIn"/>
    <div class="auth-box card">
        <div class="card-block">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-center">Personel Giriş Ekranı</h3>
                </div>
            </div>
            <div class="form-group form-primary">
                <input type="number" value="" class="form-control" asp-for="Tcno" required>
                <span class="form-bar"></span>
                <label class="float-label">TC Kimlik Numaranız</label>
            </div>
            <div class="form-group form-primary">
                <input type="password" class="form-control" asp-for="Password" required>
                <span class="form-bar"></span>
                <label class="float-label">Parolanız</label>
            </div>

            <div class="row m-t-30">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Giriş Yap</button>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <hr/>
            <div class="row">
                <div class="col-md-10">
                    <p class="text-inverse text-left m-b-0">Thank you.</p>
                    <p class="text-inverse text-left"><a href="index.html"><b>Back to website</b></a></p>
                </div>
                <div class="col-md-2">
                    <img src="/templates/mega-able-lite/assets/images/auth/Logo-small-bottom.png" alt="small-logo.png">
                </div>
            </div>
        </div>
    </div>
</form>