
@{
    ViewData["Title"] = "HastaEkle";
}
@model HastaEkleDto

<div class="col-lg-10 container">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Hasta Ekle</h1>
        </div>
        <form class="user" asp-action="HastaEkle" method="post">
            <div class="form-group">
                <input type="text" value="" class="form-control form-control-user" asp-for="Ad"
                       placeholder="Ad">
            </div>
            <div class="form-group">
                <input type="text" class="form-control form-control-user" asp-for="Soyad"
                       placeholder="Soyad">
            </div>
            <div class="form-group">
                <input type="text"  value="" class="form-control form-control-user" asp-for="Tcno"
                       placeholder="Tcno">
            </div>
            <div class="form-group">
                <input type="text" class="form-control form-control-user" asp-for="AnaAdi"
                       placeholder="AnaAdi">
            </div>
            <div class="form-group">
                <input type="text" class="form-control form-control-user" asp-for="BabaAdi"
                       placeholder="BabaAdi">
            </div>
            <div class="form-group">
                <input type="text" value=""  class="form-control form-control-user" asp-for="Telefon"
                       placeholder="Telefon">
            </div>
            <div class="form-group">
                <input type="text" class="form-control form-control-user" asp-for="Parola"
                       placeholder="Parola">
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">
                Kaydet
            </button>
            <hr>
        </form>
        <hr>
    </div>
</div>